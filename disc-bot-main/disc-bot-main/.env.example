# Discord Bot Token
DISCORD_TOKEN=your_token_here

# Crypto Private Keys (Keep Secret!)
LTC_PRIVATE_KEY=your_ltc_private_key
SOL_PRIVATE_KEY=your_sol_private_key

# Optional: Payout addresses (if different from key addresses)
LTC_PAYOUT_ADDRESS=
SOL_PAYOUT_ADDRESS=

# Operational Flags
DEBUG=1
ENABLE_LIVE_TRANSFERS=false
AUTO_SEND_ON_ADDRESS=false
IS_VERIFICATION=false

# Channel IDs for detection fallback
VOUCH_CHANNEL_ID=
VOUCH_WEBHOOK_URL=

# Port for optional health checks
PORT=3000
NODE_ENV=production
